{
  "compilerOptions": {
    /* ===== 기본 타겟 / 모듈 ===== */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    /* ===== 경로 ===== */
    "rootDir": "src",
    "outDir": "dist",

    /* ===== Node 환경 ===== */
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ===== 타입 엄격 모드 ===== */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    /* ===== 기타 ===== */
    "forceConsistentCasingInFileNames": true,


    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
